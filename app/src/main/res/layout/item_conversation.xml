<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:contentDescription="@string/profile_image_content_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_conversation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Board Name"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@color/soft_black"
                android:fontFamily="@font/pt_sans_regular"
                app:layout_constraintStart_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="22dp"
                />
            <ImageView
                android:id="@+id/iv_active"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintStart_toStartOf="@id/civ_profile_image"
                app:layout_constraintEnd_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toTopOf="@id/civ_profile_image"
               app:layout_constraintBottom_toBottomOf="@id/civ_profile_image"
                app:layout_constraintHorizontal_bias="0.80"
                app:layout_constraintVertical_bias="0.98"
                android:contentDescription="@string/active_icon"
                android:src="@drawable/ic_active"
                />
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Board Name"
                android:singleLine="true"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:fontFamily="@font/pt_sans_regular"
                app:layout_constraintStart_toEndOf="@id/civ_profile_image"
                app:layout_constraintTop_toBottomOf="@id/tv_conversation_title"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>